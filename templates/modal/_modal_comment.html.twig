<div class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog"
     aria-labelledby="myLargeModalLabel" aria-hidden="true" id="modal-leave-comment">
    <div class="modal-dialog modal-lg d-flex justify-content-center">
        {{ form_start(commentForm, {'attr': {'class': 'comment_type'}}) }}
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalCenteredLabel">
                    Notez cette location :
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12 p-0">
                            <div class="rate">
                                <input type="hidden" id="rate" value="" />

                                <input type="radio" id="star5" name="rate" value="5" {% if rating is defined %}{% if rating == 5 %} checked {% endif %}{% endif %}/>
                                <label id="lblStar4" for="star5" title="text">5 stars</label>

                                <input type="radio" id="star4" name="rate" value="4" {% if rating is defined %}{% if rating == 4 %} checked {% endif %}{% endif %}/>
                                <label id="lblStar4" for="star4" title="text">4 stars</label>

                                <input type="radio" id="star3" name="rate" value="3" {% if rating is defined %}{% if rating == 3 %} checked {% endif %}{% endif %}/>
                                <label id="lblStar4" for="star3" title="text">3 stars</label>

                                <input type="radio" id="star2" name="rate" value="2" {% if rating is defined %}{% if rating == 2 %} checked {% endif %}{% endif %}/>
                                <label id="lblStar4" for="star2" title="text">2 stars</label>

                                <input type="radio" id="star1" name="rate" value="1" {% if rating is defined %}{% if rating == 1 %} checked {% endif %}{% endif %}/>
                                <label id="lblStar4" for="star1" title="text">1 star</label>
                            </div>
                        </div>
                    </div>
                    <div class="row" style="margin-top: 5rem;">
                        <div class="col-lg-12 col-md-12 col-sm-12 p-0">
                            {{ form_widget(commentForm.comment) }}
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-success">Rendre</button>
            </div>
        </div>
        {{ form_end(commentForm) }}
    </div>
</div>
