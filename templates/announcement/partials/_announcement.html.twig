{% extends 'announcement/index.html.twig' %}

{% block announcement_body %}
{{ form_start(form) }}
<div class="card">
    <h3 class="card-header">Créer votre annonce :</h3>
    <div class="card-body">
        {{ form_row(form._token) }}
        {{ form_errors(form) }}
        <div class="form-group">
            {{ form_label(form.address) }}
            {{ form_widget(form.address) }}
            {% if form_errors(form.address) %}
                <div class="alert alert-danger" role="alert">
                    {{ form_errors(form.address) }}
                </div>
            {% endif %}
        </div>
        <div class="form-group">
            {{ form_label(form.zipcode) }}
            {{ form_widget(form.zipcode) }}
            {% if form_errors(form.zipcode) %}
                <div class="alert alert-danger" role="alert">
                    {{ form_errors(form.zipcode) }}
                </div>
            {% endif %}
        </div>
        <div class="form-group">
            {{ form_label(form.city) }}
            {{ form_widget(form.city) }}
            {% if form_errors(form.city) %}
                <div class="alert alert-danger" role="alert">
                    {{ form_errors(form.city) }}
                </div>
            {% endif %}
        </div>
        <div class="form-group">
            {{ form_label(form.price) }}
            <div class="input-group">
                {{ form_widget(form.price) }}
                <div class="input-group-append">
                    <span class="input-group-text">€</span>
                </div>
            </div>
            {% if form_errors(form.price) %}
                <div class="alert alert-danger" role="alert">
                    {{ form_errors(form.price) }}
                </div>
            {% endif %}
        </div>
        <div class="form-group">
            {{ form_label(form.description) }}
            {{ form_widget(form.description) }}
            {% if form_errors(form.description) %}
                <div class="alert alert-danger" role="alert">
                    {{ form_errors(form.description) }}
                </div>
            {% endif %}
        </div>
    </div>
    <div class="card-footer">
        <button type="submit" name="submit" class="btn btn-primary">Poster</button>
    </div>
</div>
{{ form_end(form, {'render_rest': false}) }}
{% endblock %}