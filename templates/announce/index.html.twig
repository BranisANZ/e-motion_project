{% extends 'base.html.twig' %}

{% block title %}Announce index{% endblock %}

{% block body %}
    <h1>Announce index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Address</th>
                <th>Price</th>
                <th>Photo</th>
                <th>Description</th>
                <th>Enable</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for announce in announces %}
            <tr>
                <td>{{ announce.id }}</td>
                <td>{{ announce.address }}</td>
                <td>{{ announce.price }}</td>
                <td>{{ announce.photo }}</td>
                <td>{{ announce.description }}</td>
                <td>{{ announce.enable ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('announce_show', {'id': announce.id}) }}">show</a>
                    <a href="{{ path('announce_edit', {'id': announce.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('announce_new') }}">Create new</a>
{% endblock %}
