    <section id="r-login-register">
        <div class="r-login-register">
            <div class="r-login-register-in" style="display: flex;justify-content: center">
                <div class="col-md-8">
                    <div class="r-auth-outer">
                        <div class="r-auth-head">
                            <h2><b>Créer une annonce</b></h2>
                            <span>Ajouter une annonce</span>
                        </div>
                        <div class="r-auth-form">
                            <div class="r-or-line"><span>ANNONCE</span></div>
                            {{ form_start(form) }}
                            {{ form_row(form._token) }}
                            {{ form_errors(form) }}
                            <div class="form-group">
                                {{ form_label(form.address) }}
                                {{ form_widget(form.address) }}
                                {% if form_errors(form.address) %}
                                    <div class="alert alert-danger" role="alert">
                                        {{ form_errors(form.address) }}
                                    </div>
                                {% endif %}
                            </div>
                            <div class="form-group">
                                {{ form_label(form.zipcode) }}
                                {{ form_widget(form.zipcode) }}
                                {% if form_errors(form.zipcode) %}
                                    <div class="alert alert-danger" role="alert">
                                        {{ form_errors(form.zipcode) }}
                                    </div>
                                {% endif %}
                            </div>
                            <div class="form-group">
                                {{ form_label(form.city) }}
                                {{ form_widget(form.city) }}
                                {% if form_errors(form.city) %}
                                    <div class="alert alert-danger" role="alert">
                                        {{ form_errors(form.city) }}
                                    </div>
                                {% endif %}
                            </div>
                            <div class="form-group">
                                {{ form_label(form.price) }}
                                <div class="input-group">
                                    {{ form_widget(form.price) }}
                                    <div class="input-group-append">
                                        <span class="input-group-text">€</span>
                                    </div>
                                </div>
                                {% if form_errors(form.price) %}
                                    <div class="alert alert-danger" role="alert">
                                        {{ form_errors(form.price) }}
                                    </div>
                                {% endif %}
                            </div>
                            <div class="form-group">
                                {{ form_label(form.description) }}
                                {{ form_widget(form.description) }}
                                {% if form_errors(form.description) %}
                                    <div class="alert alert-danger" role="alert">
                                        {{ form_errors(form.description) }}
                                    </div>
                                {% endif %}
                            </div>
                            {{ form_widget(form.vehicle) }}
                            <div class="form-group" style="display:flex;justify-content: center">
                                <button type="submit" class="btn btn-full">Poster</button>
                            </div>
                            {{ form_end(form, {'render_rest': false}) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>